





# Environment Configuration for Tennis Coach Platform Tests
# Copy this file to .env and update with your actual values

# Base URL of your deployed Tennis Coach platform
# This should be the API Gateway URL from your Terraform deployment
BASE_URL=https://jsonplaceholder.typicode.com

# Test Configuration
TEST_TIMEOUT=60000
TEST_RETRIES=2

# Browser Configuration
HEADLESS=true
SLOW_MO=0

# Performance Test Thresholds (in milliseconds)
MAX_PAGE_LOAD_TIME=5000
MAX_API_RESPONSE_TIME=3000
MAX_SEARCH_TIME=1000

# Test Data Configuration
CREATE_TEST_COACHES=false
CLEANUP_TEST_DATA=true

# Accessibility Test Configuration
RUN_ACCESSIBILITY_TESTS=true
WCAG_LEVEL=AA

# Performance Test Configuration
RUN_PERFORMANCE_TESTS=true
PERFORMANCE_BUDGET_KB=2048

# Debugging
DEBUG=false
TRACE_ON_FAILURE=true
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# CI/CD Configuration
CI=false
PARALLEL_WORKERS=1

# AWS Configuration (if needed for direct API testing)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key





